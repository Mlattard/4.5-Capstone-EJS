<form class="updateForm" action="/submit/<%= postUpdate.id %>" method="POST">
    <div>
        <input type="text" name="title" placeholder="post title" value="<%= postUpdate.title %>">
        <input type="text" name="author" placeholder="author" value="<%= postUpdate.author %>">
    </div>
    <textarea row="10" cols="50" name="content" placeholder="post content"><%= postUpdate.content %></textarea>
    <input type="submit" value="confirm">
</form>

